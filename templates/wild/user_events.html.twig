{% extends 'base.html.twig' %}

{% block title %}Evènements{% endblock %}

{% block body %}
    <div class="container">
        <h1>LISTE DES EVENEMENTS</h1>

        <table class="table card">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.name }}</td>
                    <td>{{ event.description }}</td>
                    <td>
                        <a class="btn-validate" href="{{ path('event_show', {'id': event.id}) }}">Accéder</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas d'évènement en cours</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
