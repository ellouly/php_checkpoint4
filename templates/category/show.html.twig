{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ category.type}}</h1>
        <table class="table card">
            <tbody>
                <tr>
                    <th>PRIX</th>
                    <td>{{ category.price }} €</td>
                </tr>
                <tr>
                    <th>DESCRIPTION</th>
                    <td>{{ category.description }}</td>
                </tr>
            </tbody>
        </table>
        <div class="button row justify-content-around mt-4">
            <div>
                <a class="btn-show" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
            </div>
            <div>
                {{ include('category/_delete_form.html.twig') }}
            </div>
            <div>
                <a class="btn-create" href="{{ path('category_index') }}">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}
