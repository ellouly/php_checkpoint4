{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
<div class="container">
    <h1>MESSAGE</h1>

    <table class="table card">
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.eMail }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ contact.object }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>
    div class="button row justify-content-around mt-4">
    <div>
        <a class="btn-show" href="{{ path('contact_index') }}">Retour à la liste</a>
    </div>
    <div>
        {{ include('contact/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
