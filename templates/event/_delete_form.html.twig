<form method="post" action="{{ path('event_delete', {'id': event.id}) }}" onsubmit="return confirm('Etes vous sûr(e) de vouloir supprimer cet évènement?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button class="btn-show">Supprimer</button>
</form>
