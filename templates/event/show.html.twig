{% extends 'base.html.twig' %}

{% block title %}Evènement{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ event.name }}</h1>
    <table class="table card">
        <tbody>
            <tr>
                <th>TITRE</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>DESCRIPTION</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th></th>
                <td>{{ event.image }}</td>
            </tr>
        </tbody>
    </table>
    <div class="button row justify-content-around mt-4">
        <div>
            <a class="btn-show" href="{{ path('event_index') }}">Retour à la liste</a>
        </div>
        <div>
            {{ include('event/_delete_form.html.twig') }}
        </div>
        <div>
            <a class="btn-create" href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>
        </div>
    </div>
</div>
{% endblock %}

