{% extends 'base.html.twig' %}

{% block title %}Agenda{% endblock %}

{% block body %}
<div class="container">
    <h1>AGENDA SAISON 2019-2020</h1>

    <table class="table card">
        <thead>
            <tr>
                <th>DATES</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
        {% for agenda in agendas %}
            <tr>
                <td>{{ agenda.dateTime ? agenda.dateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn-validate" href="{{ path('agenda_show', {'id': agenda.id}) }}">Acc√©der</a>
                    <a class="btn-validate" href="{{ path('agenda_edit', {'id': agenda.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de dates en cours</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('agenda_new') }}" class="btn-create">CREER UNE NOUVELLE DATE</a>
</div>
{% endblock %}
